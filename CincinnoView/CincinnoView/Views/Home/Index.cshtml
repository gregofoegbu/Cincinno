@{
    ViewData["Title"] = "Cincinno";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Custom CSS */
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .hero-section {
            background-image: url('doorbell-camera-bg.jpg');
            background-size: cover;
            background-position: center;
            color: #fff;
            padding: 100px 0;
            text-align: center;
        }

            .hero-section h1 {
                font-size: 48px;
                font-weight: bold;
                margin-bottom: 20px;
            }

            .hero-section p {
                font-size: 20px;
                margin-bottom: 30px;
            }

        .btn-get-started {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 25px;
            padding: 10px 30px;
            font-size: 20px;
            font-weight: bold;
            text-transform: uppercase;
            transition: all 0.3s ease;
        }

            .btn-get-started:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <h1>Welcome to Cincinno</h1>
                    <p style="color:black">Experience the future of home security with our advanced facial recognition doorbell camera.</p>
                    <a asp-controller="Account" asp-action="register" class="btn btn-get-started">Get Started</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features-section">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h2>Facial Recognition</h2>
                    <p>Our doorbell camera uses advanced facial recognition technology to identify authorized visitors and grant them access.</p>
                </div>
                <div class="col-md-4">
                    <h2>Real-Time Alerts</h2>
                    <p>Receive instant updates on your account whenever someone is granted or denied access.</p>
                </div>
                <div class="col-md-4">
                    <h2>Flexibility</h2>
                    <p>Seamless addition and deletion of faces using our state of the art website</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer Section -->
    <footer class="footer-section">
        <div class="container text-center">
            <p>&copy; Cincinno. All rights reserved.</p>
        </div>
    </footer>

</body>
</html>

