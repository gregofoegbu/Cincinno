@model List<ImageViewModel>

<h2>Image Gallery</h2>

@{ if (ViewBag.DeleteResult != null) {
        <p>@ViewBag.DeleteResult</p>
        }
    }
<div class="image-container">
    @foreach (var image in Model)
    {
        <div class="image-item">
            <img src="@Url.Action("DisplayImage", "Image", new { id = image.Id })" alt="@image.Filename" />
            <p>@image.Name</p>
            <div class="deleteimgblock">
            <a asp-controller="Image" asp-action="DeleteImage" asp-route-id="@image.Id" class="btn btn-danger btn-sm">Delete Image</a>
            </div>
        </div>
    }
</div>
<div class="uploadimg">
<a asp-controller="Image" asp-action="UploadImage" class="btn btn-outline-primary">Upload New Image</a>
</div>


